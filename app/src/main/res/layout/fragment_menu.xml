<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.view.MenuFragment">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/appCompatImageView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/foundimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius_bottom_left="30dp"
        app:riv_corner_radius_top_left="30dp"
        app:riv_mutate_background="true" />

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_background_menu_settings"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7">

            <ImageView
                android:id="@+id/imageViewClient"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_background_icn_menu"
                android:padding="18dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textNameUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/lato"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/brownapp"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3"
                    tools:layout_editor_absoluteX="155dp"
                    tools:text="email@email.com.br" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenCam"
                    android:layout_width="120dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:backgroundTint="@color/brownapp"
                    android:fontFamily="@font/lato"
                    android:text="Editar Foto"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="9dp"
                    app:cornerRadius="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textNameUser"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="115dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_itens_menu"
                android:orientation="vertical"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7">

                <LinearLayout
                    android:id="@+id/alterarSenha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="7dp"
                        android:paddingStart="13dp"
                        android:paddingTop="13dp"
                        android:paddingEnd="13dp"
                        android:paddingBottom="13dp"
                        android:src="@drawable/ic_alterarpass"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/blackPoke"
                        android:fontFamily="@font/lato"
                        android:gravity="center"
                        android:text="Alterar Senha"
                        android:textColor="@color/brownapp"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView7"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@null"
                        android:padding="10dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="333dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/brownapp"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/contribuaPix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="2dp"
                        android:padding="11dp"
                        android:src="@drawable/donat"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/blackPoke"
                        android:fontFamily="@font/lato"
                        android:gravity="center"
                        android:text="Contribua"
                        android:textColor="@color/brownapp"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView7"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@null"
                        android:padding="10dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="333dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/brownapp"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/desativarConta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="7dp"
                        android:paddingStart="13dp"
                        android:paddingTop="13dp"
                        android:paddingEnd="13dp"
                        android:paddingBottom="13dp"
                        android:src="@drawable/ic_desativaracc"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/blackPoke"
                        android:fontFamily="@font/lato"
                        android:gravity="center"
                        android:text="Desativar Conta"
                        android:textColor="@color/brownapp"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView7"
                        tools:ignore="MissingConstraints" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@null"
                        android:padding="10dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="333dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:elevation="2dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="120dp"
                android:background="@drawable/shape_itens_menu"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="337dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="7dp"
                    android:paddingStart="13dp"
                    android:paddingTop="13dp"
                    android:paddingEnd="13dp"
                    android:paddingBottom="13dp"
                    android:src="@drawable/ic_sair"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/blackPoke"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="Sair"
                    android:textColor="@color/brownapp"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView7"
                    tools:ignore="MissingConstraints" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@null"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="333dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>